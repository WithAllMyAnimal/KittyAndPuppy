<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kittyandpuppy.withallmyanimal.MypageHospital">
    
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_mypage_hospital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    
    <TextView
        android:id="@+id/tv_mypage_hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일지 작성"
        android:textSize="20sp"
        android:fontFamily="@font/cafe24"
        app:layout_constraintTop_toTopOf="@id/toolbar_mypage_hospital"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_mypage_hospital"
        app:layout_constraintStart_toStartOf="@id/toolbar_mypage_hospital"
        app:layout_constraintEnd_toEndOf="@id/toolbar_mypage_hospital"
        />

    <ImageButton
        android:id="@+id/btn_mypage_hospital_back"
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:src="@drawable/image_back"
        android:scaleType="fitCenter"
        android:padding="15dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/toolbar_mypage_hospital"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_mypage_hospital"
        app:layout_constraintStart_toStartOf="@id/toolbar_mypage_hospital"
        />

    <ImageButton
        android:id="@+id/btn_mypage_hospital_save"
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:src="@drawable/image_save"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/toolbar_mypage_hospital"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_mypage_hospital"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>