<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kittyandpuppy.withallmyanimal.DetailHospitalActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_detailHos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_detailHos_back"
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/image_back"
        app:layout_constraintBottom_toBottomOf="@id/tb_detailHos"
        app:layout_constraintStart_toStartOf="@id/tb_detailHos"
        app:layout_constraintTop_toTopOf="@id/tb_detailHos" />

    <TextView
        android:id="@+id/btn_detailHos_Hospital"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/cafe24"
        android:gravity="center"
        android:text="병원"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/tb_detailHos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tb_detailHos" />

    <ImageView
        android:id="@+id/iv_detailHos_profile"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/detail_circle_shape"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/image_sample"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_detailHos" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/cafe24"
        android:text="설기"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_detailHos_profile"
        app:layout_constraintStart_toEndOf="@+id/iv_detailHos_profile"
        app:layout_constraintTop_toTopOf="@+id/iv_detailHos_profile" />




</androidx.constraintlayout.widget.ConstraintLayout>