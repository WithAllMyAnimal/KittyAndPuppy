<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kittyandpuppy.withallmyanimal.home.HomeFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ab_resignation_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_resignation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ari"
        android:text="이심\n동심"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/ab_resignation_appbar"
        app:layout_constraintEnd_toEndOf="@id/ab_resignation_appbar"
        app:layout_constraintStart_toStartOf="@id/ab_resignation_appbar"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_resignation_megaphone"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/image_megaphone"
        app:layout_constraintEnd_toEndOf="@id/ab_resignation_appbar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_resignation_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/maple"
        android:text="필독!"
        android:textSize="10sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_resignation_megaphone" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_resignation_constraintlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ab_resignation_appbar">

        <TextView
            android:id="@+id/tv_resignation_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.회원탈퇴시 주의사항"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginVertical="10dp"
            app:layout_constraintBottom_toTopOf="@id/tv_resignation_detailwarning"
            app:layout_constraintStart_toStartOf="@id/tb_resignation_howtoresignation"
            app:layout_constraintTop_toBottomOf="@id/tb_resignation_howtoresignation"/>

        <TextView
            android:id="@+id/tv_resignation_detailwarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@id/cb_resignation_checkbox"
            android:text="모든 이용정보 및 게시글 삭제 \n계정을 삭제하면 프로필, 사진, 댓글, 좋아요가 영구적으로 삭제됩니다.\n회원 탈퇴와 동시에 개인정보 및 모든 이용정보가 초기화 되어 삭제 되므로 절대 복구 불가합니다."
            app:layout_constraintStart_toStartOf="@+id/tv_resignation_warning"
            app:layout_constraintTop_toBottomOf="@id/tv_resignation_warning" />

        <TextView
            android:id="@+id/tb_resignation_howtoresignation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="이심동심 계정을 영구 삭제하려면 다음 단계를 따르세요.\n회원 탈퇴시 주의사항을 모두 읽고 하단에 있는 체크박스를 클릭합니다.\n탈퇴하시려면 탈퇴하기 버튼을 눌러주세요. \n체크박스를 확인하지 않으면 버튼이 눌리지 않습니다."
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="5dp"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@id/tv_resignation_warning"
            />

        <CheckBox
            android:id="@+id/cb_resignation_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유의사항을 모두 확인하였으며, 회원탈퇴에 동의합니다."
            app:layout_constraintTop_toBottomOf="@id/tv_resignation_detailwarning"
            app:layout_constraintStart_toStartOf="@id/con_resignation_constraintlayout"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_resignation_resignbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_disable_background"
            android:fontFamily="@font/cafe24"
            android:text="탈퇴하기"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/btn_resignation_canclebutton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cb_resignation_checkbox" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_resignation_canclebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_login"
            android:fontFamily="@font/cafe24"
            android:text="취소"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_resignation_resignbutton"
            app:layout_constraintTop_toTopOf="@+id/btn_resignation_resignbutton" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>