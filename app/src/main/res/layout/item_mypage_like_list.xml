<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_mypage_item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/mypage_diary_edittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageView
            android:id="@+id/iv_mypage_list_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/detail_circle_shape"
            android:clipToOutline="true"
            android:src="@drawable/image_sample3"
            app:layout_constraintStart_toStartOf="@id/con_mypage_item_list"
            app:layout_constraintTop_toTopOf="@id/con_mypage_item_list" />

        <TextView
            android:id="@+id/tv_mypage_list_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/cafe24"
            android:text="닉네임"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/con_mypage_item_list"
            app:layout_constraintEnd_toEndOf="@id/iv_mypage_list_profile"
            app:layout_constraintStart_toStartOf="@id/iv_mypage_list_profile"
            app:layout_constraintTop_toBottomOf="@id/iv_mypage_list_profile" />

        <TextView
            android:id="@+id/tv_mypage_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/cafe24"
            android:text="제목이 들어갈 공간입니다."
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/tv_mypage_list_review"
            app:layout_constraintStart_toEndOf="@id/iv_mypage_list_profile"
            app:layout_constraintTop_toTopOf="@id/con_mypage_item_list" />

        <TextView
            android:id="@+id/tv_mypage_list_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-45dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/cafe24"
            android:text="세부내용이 들어갈 곳입니다 세부내용이 들어갈 곳입니다 \n세부내용이 들어갈 곳입니다 세부내용이 들어갈 곳입니다"
            android:textColor="#999999"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@id/con_mypage_item_list"
            app:layout_constraintBottom_toTopOf="@id/tv_mypage_list_date"
            app:layout_constraintStart_toEndOf="@id/iv_mypage_list_profile"
            app:layout_constraintTop_toBottomOf="@id/tv_mypage_list_title" />

        <TextView
            android:id="@+id/tv_mypage_list_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cafe24"
            android:text="2023.10.14"
            android:textColor="@color/lightblack"
            android:textSize="11sp"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_mypage_list_review"
            app:layout_constraintBottom_toBottomOf="@id/con_mypage_item_list"
            app:layout_constraintEnd_toEndOf="@id/con_mypage_item_list"
            app:layout_constraintStart_toStartOf="@id/con_mypage_item_list" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>