<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_mypage_daily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_mypage_daily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cafe24"
        android:text="일지 작성"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_mypage_daily"
        app:layout_constraintEnd_toEndOf="@id/toolbar_mypage_daily"
        app:layout_constraintStart_toStartOf="@id/toolbar_mypage_daily"
        app:layout_constraintTop_toTopOf="@id/toolbar_mypage_daily" />

    <ImageButton
        android:id="@+id/btn_mypage_daily_back"
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/image_back"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_mypage_daily"
        app:layout_constraintStart_toStartOf="@id/toolbar_mypage_daily"
        app:layout_constraintTop_toTopOf="@id/toolbar_mypage_daily" />

    <TextView
        android:id="@+id/btn_mypage_daily_tag"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/mypage_btn_tag_background"
        android:fontFamily="@font/cafe24"
        android:gravity="center"
        android:text="일상"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_mypage_daily"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/toolbar_mypage_daily" />

    <!--    scrollView 적용하기!!-->
    <!--    appbar 바로 밑부분 view들-->

    <ScrollView
        android:id="@+id/mypage_daily_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_mypage_daily">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con_mypage_daily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/mypage_diary_background">

            <EditText
                android:id="@+id/etv_mypage_daily_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:background="@drawable/mypage_diary_edittext"
                android:fontFamily="@font/cafe24"
                android:gravity="center_vertical"
                android:hint="제목을 입력해주세요"
                android:padding="20dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@id/view_mypage_daily_line_top"
                app:layout_constraintEnd_toEndOf="@id/con_mypage_daily"
                app:layout_constraintStart_toStartOf="@id/con_mypage_daily"
                app:layout_constraintTop_toBottomOf="@id/view_mypage_daily_line_top"
                app:layout_constraintTop_toTopOf="@id/con_mypage_daily" />

            <View
                android:id="@+id/view_mypage_daily_line_top"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="@id/con_mypage_daily"
                app:layout_constraintStart_toStartOf="@id/con_mypage_daily"
                app:layout_constraintTop_toBottomOf="@id/etv_mypage_daily_title" />

            <androidx.cardview.widget.CardView
                android:id="@+id/iv_mypage_daily_picture_left"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintBottom_toTopOf="@id/view_mypage_daily_line_bottom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/con_mypage_daily"
                app:layout_constraintTop_toBottomOf="@id/view_mypage_daily_line_top">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"/>
            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/view_mypage_daily_line_bottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="@id/con_mypage_daily"
                app:layout_constraintStart_toStartOf="@id/con_mypage_daily"
                app:layout_constraintTop_toBottomOf="@id/view_mypage_daily_line_bottom"
                />

            <TextView
                android:id="@+id/tv_mypage_daily_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="태그(최대 3줄)"
                android:fontFamily="@font/cafe24"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/view_mypage_daily_line_bottom"
                app:layout_constraintStart_toStartOf="@id/con_mypage_daily"
                />

            <EditText
                android:id="@+id/etv_mypage_daily_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mypage_diary_edittext"
                android:fontFamily="@font/cafe24"
                android:hint="태그를 작성해주세요"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="@id/con_mypage_daily"
                app:layout_constraintStart_toStartOf="@id/con_mypage_daily"
                app:layout_constraintTop_toBottomOf="@id/tv_mypage_daily_tag" />

            <TextView
                android:id="@+id/tv_mypage_daily_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/cafe24"
                android:text="오늘은 어떤 일상이었는지 기록해주세요"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/con_mypage_daily"
                app:layout_constraintTop_toBottomOf="@id/etv_mypage_daily_tag" />

            <EditText
                android:id="@+id/etv_mypage_daily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mypage_diary_edittext"
                android:fontFamily="@font/cafe24"
                android:hint="일지를 작성해주세요"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="@id/con_mypage_daily"
                app:layout_constraintStart_toStartOf="@id/con_mypage_daily"
                app:layout_constraintTop_toBottomOf="@id/tv_mypage_daily_title" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_mypage_daily_save"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginVertical="20dp"
                android:background="@drawable/mypage_btn_tag_background"
                android:fontFamily="@font/cafe24"
                android:text="저장"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/con_mypage_daily"
                app:layout_constraintEnd_toEndOf="@id/con_mypage_daily"
                app:layout_constraintStart_toStartOf="@id/con_mypage_daily"
                app:layout_constraintTop_toBottomOf="@id/etv_mypage_daily" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>