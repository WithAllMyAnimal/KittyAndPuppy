<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_mypage_daily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_mypage_daily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cafe24"
        android:text="일지 작성"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_mypage_daily"
        app:layout_constraintEnd_toEndOf="@id/toolbar_mypage_daily"
        app:layout_constraintStart_toStartOf="@id/toolbar_mypage_daily"
        app:layout_constraintTop_toTopOf="@id/toolbar_mypage_daily" />

    <ImageButton
        android:id="@+id/btn_mypage_daily_back"
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/image_back"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_mypage_daily"
        app:layout_constraintStart_toStartOf="@id/toolbar_mypage_daily"
        app:layout_constraintTop_toTopOf="@id/toolbar_mypage_daily" />

    <TextView
        android:id="@+id/btn_mypage_daily_tag"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/mypage_btn_tag_background"
        android:fontFamily="@font/cafe24"
        android:gravity="center"
        android:text="일상"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_mypage_daily"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/toolbar_mypage_daily" />

    <ScrollView
        android:id="@+id/mypage_daily_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_mypage_daily">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/con_mypage_daily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/mypage_diary_background">

                <EditText
                    android:id="@+id/etv_mypage_daily_title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="20dp"
                    android:background="@drawable/mypage_diary_edittext"
                    android:fontFamily="@font/cafe24"
                    android:gravity="center_vertical"
                    android:hint="20자 이내로 제목을 입력해주세요"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:maxLength="20"
                    app:layout_constraintBottom_toTopOf="@id/view_mypage_daily_line_top"
                    app:layout_constraintEnd_toEndOf="@id/con_mypage_daily"
                    app:layout_constraintStart_toStartOf="@id/con_mypage_daily"
                    app:layout_constraintTop_toBottomOf="@id/view_mypage_daily_line_top"
                    app:layout_constraintTop_toTopOf="@id/con_mypage_daily" />

                <View
                    android:id="@+id/view_mypage_daily_line_top"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="20dp"
                    android:background="@color/lightblack"
                    app:layout_constraintEnd_toEndOf="@id/con_mypage_daily"
                    app:layout_constraintStart_toStartOf="@id/con_mypage_daily"
                    app:layout_constraintTop_toBottomOf="@id/etv_mypage_daily_title" />

                <ImageView
                    android:id="@+id/iv_mypage_daily_picture_left"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/add_image"
                    app:layout_constraintBottom_toTopOf="@id/view_mypage_daily_line_bottom"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/con_mypage_daily"
                    app:layout_constraintTop_toBottomOf="@id/view_mypage_daily_line_top" />

                <View
                    android:id="@+id/view_mypage_daily_line_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/lightblack"
                    app:layout_constraintEnd_toEndOf="@id/con_mypage_daily"
                    app:layout_constraintStart_toStartOf="@id/con_mypage_daily"
                    app:layout_constraintTop_toBottomOf="@id/view_mypage_daily_line_bottom" />

                <TextView
                    android:id="@+id/tv_mypage_daily_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/cafe24"
                    android:text="태그(최대 3개)"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/con_mypage_daily"
                    app:layout_constraintTop_toBottomOf="@id/view_mypage_daily_line_bottom" />

                <EditText
                    android:id="@+id/etv_mypage_daily_tag"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="태그를 입력해주세요"
                    android:fontFamily="@font/cafe24"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_mypage_daily_tag"
                    app:layout_constraintStart_toStartOf="@id/tv_mypage_daily_tag"
                    />

                <Button
                    android:id="@+id/btn_daily_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추가"
                    android:textColor="@color/black"
                    android:fontFamily="@font/cafe24"
                    android:background="@android:color/transparent"
                    app:layout_constraintTop_toTopOf="@id/etv_mypage_daily_tag"
                    app:layout_constraintBottom_toBottomOf="@id/etv_mypage_daily_tag"
                    app:layout_constraintEnd_toEndOf="@id/con_mypage_daily"
                    />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="@id/con_mypage_daily"
                    app:layout_constraintStart_toStartOf="@id/etv_mypage_daily_tag"
                    app:layout_constraintTop_toBottomOf="@id/etv_mypage_daily_tag" />

                <TextView
                    android:id="@+id/tv_mypage_daily_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/cafe24"
                    android:text="오늘은 어떤 일상이었는지 기록해주세요"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/con_mypage_daily"
                    app:layout_constraintTop_toBottomOf="@id/chip_group" />

                <EditText
                    android:id="@+id/etv_mypage_daily"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mypage_diary_edittext"
                    android:fontFamily="@font/cafe24"
                    android:hint="일지를 작성해주세요"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@id/con_mypage_daily"
                    app:layout_constraintStart_toStartOf="@id/con_mypage_daily"
                    app:layout_constraintTop_toBottomOf="@id/tv_mypage_daily_title" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_mypage_daily_save"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginVertical="20dp"
                    android:background="@drawable/mypage_btn_tag_background"
                    android:fontFamily="@font/cafe24"
                    android:text="저장"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@id/con_mypage_daily"
                    app:layout_constraintEnd_toEndOf="@id/con_mypage_daily"
                    app:layout_constraintStart_toStartOf="@id/con_mypage_daily"
                    app:layout_constraintTop_toBottomOf="@id/etv_mypage_daily" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>