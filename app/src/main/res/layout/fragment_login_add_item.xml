<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <TextView
        android:id="@+id/tv_login_add_item_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        android:fontFamily="@font/cafe24"
        android:text="회원가입"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_login_add_item_login_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        android:fontFamily="@font/maple"
        android:text="이메일"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/et_login_add_item_id_hint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_login_add_item_signup" />

    <EditText
        android:id="@+id/et_login_add_item_id_hint"
        android:layout_width="240dp"
        android:layout_height="56dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/edit_text_sample"
        android:fontFamily="@font/maple"
        android:hint="이메일을 입력해주세요"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_login_add_item_signup" />

    <Button
        android:id="@+id/btn_login_signup"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginStart="148dp"
        android:fontFamily="@font/maple"
        android:text="이메일\n중복확인"
        android:textColor="@color/realblue"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_login_add_item_id_hint"
        app:layout_constraintStart_toStartOf="@+id/et_login_add_item_id_hint"
        app:layout_constraintTop_toTopOf="@+id/et_login_add_item_id_hint"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_login_add_item_login_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/maple"
        android:text="비밀번호"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/et_login_add_item_pw_hint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_login_add_item_login_id" />

    <EditText
        android:id="@+id/et_login_add_item_pw_hint"
        android:layout_width="240dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edit_text_sample"
        android:padding="15dp"
        android:hint="숫자,영문,대문자로만 작성해주세요"
        android:inputType="text"
        android:textSize="11sp"
        android:fontFamily="@font/maple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.885"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_login_add_item_id_hint" />


    <TextView
        android:id="@+id/tv_login_add_item_pw_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/maple"
        android:text="비밀번호\n    확인"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/et_login_add_item_pw_hint_check"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_login_add_item_login_pw" />

    <EditText
        android:id="@+id/et_login_add_item_pw_hint_check"
        android:layout_width="240dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edit_text_sample"
        android:padding="15dp"
        android:hint="숫자,영문,대문자로만 작성해주세요"
        android:inputType="text"
        android:textSize="11sp"
        android:fontFamily="@font/maple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.878"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_login_add_item_pw_hint" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save_dialog"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@drawable/btn_login"
        android:fontFamily="@font/cafe24"
        android:text="가입하기"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_login_add_item_pw_hint_check" />


</androidx.constraintlayout.widget.ConstraintLayout>
