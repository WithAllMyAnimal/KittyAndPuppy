<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tv_login_add_item_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/cafe24"
                android:text="회원가입"
                android:textColor="@color/black"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_login_add_item_login_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/maple"
                android:text="이메일"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_login_add_item_signup" />

            <EditText
                android:id="@+id/et_login_add_item_id_hint"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text_sample"
                android:fontFamily="@font/maple"
                android:hint="이메일을 입력해주세요"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingHorizontal="15dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_login_add_item_login_id" />

            <Button
                android:id="@+id/btn_login_signup"
                style="?android:borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:fontFamily="@font/maple"
                android:text="이메일\n중복확인"
                android:textColor="@color/realblue"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/et_login_add_item_id_hint"
                app:layout_constraintEnd_toEndOf="@id/et_login_add_item_id_hint"
                app:layout_constraintTop_toTopOf="@id/et_login_add_item_id_hint" />

            <TextView
                android:id="@+id/tv_login_add_item_login_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/maple"
                android:text="비밀번호"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_login_add_item_id_hint" />

            <EditText
                android:id="@+id/et_login_add_item_pw_hint"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text_sample"
                android:fontFamily="@font/maple"
                android:hint="숫자, 영문, 특수문자를 사용하여 작성해주세요"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingHorizontal="15dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_login_add_item_login_pw" />


            <TextView
                android:id="@+id/tv_login_add_item_pw_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/maple"
                android:text="비밀번호 확인"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_login_add_item_pw_hint" />

            <EditText
                android:id="@+id/et_login_add_item_pw_hint_check"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text_sample"
                android:fontFamily="@font/maple"
                android:hint="숫자, 영문, 특수문자를 사용하여 작성해주세요"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingHorizontal="15dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_login_add_item_pw_check" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_save_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_login"
                android:fontFamily="@font/cafe24"
                android:text="가입하기"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_login_add_item_pw_hint_check" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>