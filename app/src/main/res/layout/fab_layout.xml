<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fabFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="80dp"
    android:background="@android:color/transparent">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_hospital"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="35dp"
        android:backgroundTint="#FF8AAE"
        android:fontFamily="@font/cafe24"
        android:text="병원"
        android:textAlignment="center"
        android:textSize="16sp"
        android:visibility="invisible"
        app:borderWidth="0dp"
        app:icon="@drawable/main_hospital"
        app:iconSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_pet"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="#FFB2A6"
        android:fontFamily="@font/cafe24"
        android:text="용품"
        android:textAlignment="center"
        android:textSize="16sp"
        android:visibility="invisible"
        app:borderWidth="0dp"
        app:icon="@drawable/main_pet_toy"
        app:iconSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fab_behavior"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_behavior"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="#FFF89A"
        android:fontFamily="@font/cafe24"
        android:text="행동"
        android:textAlignment="center"
        android:textSize="16sp"
        android:visibility="invisible"
        app:borderWidth="0dp"
        app:icon="@drawable/main_behavior"
        app:iconSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fab_pet" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_daily"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginEnd="35dp"
        android:backgroundTint="#9ADCFF"
        android:fontFamily="@font/cafe24"
        android:text="일상"
        android:textAlignment="center"
        android:textSize="16sp"
        android:visibility="invisible"
        app:borderWidth="0dp"
        app:icon="@drawable/daily_icon"
        app:iconSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>